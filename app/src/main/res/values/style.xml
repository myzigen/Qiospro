<resources>

    <style name="ToolbarTitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="BottomNavigationIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="shapeAppearance">@style/BottomNavigationShapeAppearance</item>
        <item name="android:width">56dp</item>
        <item name="android:height">30dp</item>
        <item name="android:color">#EEF3F6</item>
    </style>

    <style name="BottomNavigationShapeAppearance" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">7dp</item>
    </style>

    <style name="BottomNavigationOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">25dp</item>
        <item name="cornerSizeTopRight">25dp</item>
    </style>

    <style name="MyDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="FullscreenBottomSheetDialogFragment" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Catalog.BottomSheet.Modal.Scrollable</item>
    </style>

    <style name="Widget.Catalog.BottomSheet.Modal.Scrollable" parent="Widget.Material3.BottomSheet.Modal">
        <item name="paddingBottomSystemWindowInsets">false</item>
		<item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
		<item name="behavior_peekHeight">0dp</item>
		<item name="android:windowIsFloating">false</item>
    </style>

    <style name="KeyboardStyle" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
    </style>

    <style name="TransparentBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12.5sp</item> <!-- Ubah ukuran teks di sini -->
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SplashTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CardViewStyle">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#E5ECF6</item>
        <item name="cardElevation">1dp</item>
        <item name="android:outlineAmbientShadowColor">@color/qiospay_blue_dop</item>
        <item name="android:outlineSpotShadowColor">@color/qiospay_blue_dop</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">14sp</item>
    </style>

</resources>